<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>admin.manager.servlet.admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>admin.manager.servlet.action</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crud</servlet-name>
        <servlet-class>admin.manager.servlet.crud</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUser</servlet-name>
        <servlet-class>user.modele.presentation.ServletUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>user.modele.presentation.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>/action</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crud</servlet-name>
        <url-pattern>/crud</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUser</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/recherche</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <!-- 
        <welcome-file>RequestInformation</welcome-file>
        -->
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!-- session détruite apres 15 minutes d'inactivité -->
    <!--
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    -->
    <!-- inclure les taglibs pour toutes les pages jsp -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>
